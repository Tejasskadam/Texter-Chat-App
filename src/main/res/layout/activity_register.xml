<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:orientation="vertical"
    tools:context=".Register">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/amita"
        android:gravity="center"
        android:text="Register"
        android:textColor="#A008FF"
        android:textSize="35sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userpro"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/amita"
        android:gravity="center_horizontal"
        android:text="Select your profile picture"
        android:textColor="#A008FF" />

    <EditText
        android:id="@+id/namer"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shaper"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="40dp"
        android:textColor="#000000"
        android:textColorHighlight="#373535"
        android:textColorHint="#474747" />

    <EditText
        android:id="@+id/emailr"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shaper"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="40dp"
        android:textColor="#000000"
        android:textColorHint="#474747" />

    <EditText
        android:id="@+id/phoner"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shaper"
        android:ems="10"
        android:hint="Phone No"
        android:inputType="phone"
        android:paddingLeft="40dp"
        android:textColor="#000000"
        android:textColorHint="#474747" />

    <EditText
        android:id="@+id/passr"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shaper"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="40dp"
        android:textColor="#000000"
        android:textColorHighlight="#474747"
        android:textColorHint="#474747" />

    <Button
        android:id="@+id/signup"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shaper2"
        android:fontFamily="@font/aclonica"
        android:text="Sign Up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="165dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:fontFamily="@font/amita"
            android:gravity="right"
            android:text="Already have a account ? "
            android:textColor="#040404"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/signitext"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:fontFamily="@font/amita"
            android:text="Sign In"
            android:textColor="#A008FF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>